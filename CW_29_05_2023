let c = Number(prompt("Введіть число:" ))
	
if (c > 0){
	alert("Number is positive")
}
else if(c < 0){
	alert("Number is negative")
}
else if(c == 0){
	alert("Number = 0")
}

//////////////////////////////////////////////////////////////////////////////////////

let a_1 = Number(prompt("Введіть перше число:" ))
let a_2 = Number(prompt("Введіть друге число:" ))

if (a_1 == a_2){
	console.log("Числа рівні")
}
else if(a_1 > a_2){
	console.log(a_2, a_1)
}
else if (a_1 < a_2){
	console.log(a_1, a_2)
}
