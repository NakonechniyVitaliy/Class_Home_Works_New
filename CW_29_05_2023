<script>
let a = Number(prompt("Введіть номер дня тижня:" ))

if (a == 1){
	alert("Понеділок")
}
else if (a == 2){
	alert("Вівторок")
}
else if (a == 3){
	alert("Середа")
}
else if (a == 4){
	alert("Четверг")
}
else if (a == 5){
	alert("П'ятниця")
}
else if (a == 6){
	alert("Суботта")
}
else if (a == 7){
	alert("Неділя")
}
else {
	alert("Помилка, введіть число від 1 до 7")
}

